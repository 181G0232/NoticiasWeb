@model NoticiasWeb.Models.ViewModels.IndexViewModel
@{
    Layout = "Layout";
}


    <nav class="desplegable">

        

        <label for="checkdesplegable"><i class="fa fa-bars"></i></label>
        <input type="checkbox" id="checkdesplegable" />

        <div class="panel">

            <h1> Categorias </h1>

            <ul>
                @foreach (var cat in Model.Categorias)
                {
                    <li><a href="#"> @(cat.Nombre)  </a></li>
                }
            </ul>
        </div>
    </nav>

    <form action="~/Home/Index" method="GET">
        <input name="search" type="text" value="@(Model.Search)"/>
        <input type="submit" value="buscar"/>
    </form>

<div class="mostradorTarjetas">
@foreach (var cat in Model.Noticias)
{
<div class="Cardnew">
    <a href="~/Ver/@(cat.Titulo)">
        <img src="~/images/@(cat.Id).jpg" />
        <nav class="info">
            <h1> @if(cat.Titulo.Length > 40) 
                    { @(cat.Titulo.Substring(0, 40) + "...") } 
                    else { @(cat.Titulo) }</h1>
            <h3> <b> @(cat.IdCategoriaNavigation.Nombre) </b></h3>
            <p> @(cat.Fecha) </p>
                <p class="infoDesc"> @if(cat.Contenido.Length > 50) 
                    { @(cat.Contenido.Substring(0, 50) + "...") } 
                    else { @(cat.Contenido) }
                </p>
        </nav>
   </a>
</div>
}
</div>